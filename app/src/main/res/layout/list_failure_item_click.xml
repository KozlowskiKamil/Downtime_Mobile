<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/failureListItem_location"
        android:layout_width="174dp"
        android:layout_height="22dp"
        android:layout_margin="15dp"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/failureListItem_name"
        android:layout_width="189dp"
        android:layout_height="88dp"
        android:layout_marginStart="15dp"
        android:paddingBottom="20dp"
        android:text="Failure Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/failureListItem_location" />

    <TextView
        android:id="@+id/failureListItem_branch"
        android:layout_width="177dp"
        android:layout_height="110dp"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Branch"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="88dp"
        android:background="#C2C2C2"
        app:layout_constraintTop_toBottomOf="@id/failureListItem_location"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/failureListItem_technicianName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/failureListItem_branch"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>